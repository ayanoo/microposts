<li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content"><%= micropost.content %></span>
    <span class="content">
    <% if micropost.image? %>
　　    <%= image_tag micropost.image.to_s %>
　  <% end %>
    </span>
    <span class="timestamp">
        Posted <%= time_ago_in_words(micropost.created_at) %> ago.
        <% if current_user == micropost.user %>
            <%= link_to "delete", micropost, method: :delete, 
                                             data: { confirm: "You sure?"} %>
        <% else %>
            <%= link_to "re-tweet", retweet_path(micropost.id ) %>
        <% end %>
    </span>
    <span id="like_form<%= micropost.id %>">
        <% if current_user.favorite?(micropost) %>
            <%= render(partial: 'microposts/unlike', locals: { micropost: micropost }) %>
        <% else %>
            <%= render(partial: 'microposts/like', locals: { micropost: micropost }) %>
        <% end %>
        <%= 
        #link_to "like", likes_path(micropost_id: micropost.id  ), remote: true, method: :post 
        #render 'microposts/like',micropost: micropost
        #render(partial: 'microposts/like', locals: { micropost: micropost })
        %>
    </span>
</li>