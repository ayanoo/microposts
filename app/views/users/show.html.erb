<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
        <ul style="list-style:none;">
            <li>
                <%= link_to 'フォローリスト', followings_user_path(@user.id) %>
            </li>
            <li>
                <%= link_to "フォロワーリスト", followers_user_path(@user.id)  %>
            </li>
        </ul>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>

<h1 id="edit_h">プロフィール</h1>
